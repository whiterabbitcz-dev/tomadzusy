---
const currentYear = new Date().getFullYear();
---

<footer class="fixed bottom-0 left-0 right-0 z-50 bg-[#0a2f0a]/90 backdrop-blur-sm border-t border-white/10">
  <div class="max-w-7xl mx-auto px-6 md:px-8 py-3">
    <div class="flex flex-col md:flex-row items-center justify-center gap-4 md:gap-10">
      
      <!-- Copyright -->
      <p class="text-xs text-white/80 whitespace-nowrap">
        © {currentYear} Mattoni 1873 a.s.
      </p>

      <!-- Partner Logos -->
      <div class="flex items-center gap-6 md:gap-8">
        <!-- Mattoni Logo -->
        <a 
          href="https://www.mattoni1873.cz/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="opacity-80 hover:opacity-100 transition-opacity"
        >
          <img 
            src="/images/logo-mattoni.png" 
            alt="Mattoni 1873" 
            class="h-5 md:h-6 w-auto"
          />
        </a>

        <!-- Zálohujeme Logo -->
        <a 
          href="https://www.zalohujme.cz/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="opacity-80 hover:opacity-100 transition-opacity"
        >
          <img 
            src="/images/logo-zalohujeme.png" 
            alt="Zálohujme.cz" 
            class="h-5 md:h-6 w-auto"
          />
        </a>

        <!-- Zaperli Logo -->
        <a 
          href="https://zaperli.cz/shop/category/toma" 
          target="_blank" 
          rel="noopener noreferrer"
          class="opacity-80 hover:opacity-100 transition-opacity"
        >
          <img 
            src="/images/logo-zaperli.png" 
            alt="zaperli.cz" 
            class="h-5 md:h-6 w-auto"
          />
        </a>
      </div>

      <!-- Social Media Icons -->
      <div class="flex items-center gap-3">
        <!-- Facebook -->
        <a 
          href="https://www.facebook.com/tomaczsk" 
          target="_blank" 
          rel="noopener noreferrer"
          class="hover:scale-110 transition-transform"
          aria-label="Facebook"
        >
          <img 
            src="/images/ikona-facebook.png" 
            alt="Facebook" 
            class="h-7 w-7 md:h-8 md:w-8"
          />
        </a>

        <!-- Instagram -->
        <a 
          href="https://www.instagram.com/toma_dzusy_cz/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="hover:scale-110 transition-transform"
          aria-label="Instagram"
        >
          <img 
            src="/images/ikona-instagram.png" 
            alt="Instagram" 
            class="h-7 w-7 md:h-8 md:w-8"
          />
        </a>
      </div>

    </div>
  </div>
</footer>
