---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'domů' },
  { href: '/nase-vyrobky', label: 'naše výrobky' },
  { href: '/kontakt', label: 'kontakt' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[#0a2f0a]/90 backdrop-blur-sm">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="flex items-center justify-between h-14">
      
      <!-- Logo - Badge style, overflows header -->
      <a href="/" class="relative flex items-center -mb-8">
        <img 
          src="/images/toma-logo-head.svg" 
          alt="Toma Džusy" 
          class="h-20 md:h-24 w-auto drop-shadow-lg"
        />
      </a>

      <!-- Navigation Links (Desktop) -->
      <nav class="hidden md:flex items-center space-x-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'text-base font-semibold lowercase transition-colors hover:text-[#f26522]',
              currentPath === link.href ? 'text-[#f26522]' : 'text-white'
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-lg text-white hover:bg-white/10 transition-colors"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-[#0a2f0a]/95 backdrop-blur-sm border-t border-white/10">
    <div class="max-w-7xl mx-auto px-6 py-4 space-y-2">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block px-4 py-3 rounded-lg text-base font-semibold lowercase transition-colors',
            currentPath === link.href 
              ? 'bg-[#f26522]/20 text-[#f26522]' 
              : 'text-white hover:bg-white/10'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
