---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'domů' },
  { href: '/nase-vyrobky', label: 'naše výrobky' },
  { href: '/kontakt', label: 'kontakt' },
];
---

<nav class="sticky top-0 z-50 py-4 bg-gradient-to-b from-black/20 to-transparent">
  <div class="flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center">
      <img 
        src="/images/toma-logo.png" 
        alt="Toma Džusy" 
        class="h-12 md:h-14 w-auto"
      />
    </a>

    <!-- Navigation Links (Desktop) -->
    <div class="hidden md:flex items-center space-x-8">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'text-base font-semibold lowercase transition-colors hover:text-[#f26522]',
            currentPath === link.href ? 'text-[#f26522]' : 'text-white'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>

    <!-- Mobile Menu Button -->
    <button 
      id="mobile-menu-button"
      class="md:hidden p-2 rounded-lg text-white hover:bg-white/10 transition-colors"
      aria-label="Menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden mt-4 bg-black/40 backdrop-blur-md rounded-xl p-4">
    <div class="space-y-2">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block px-4 py-3 rounded-lg text-base font-semibold lowercase transition-colors',
            currentPath === link.href 
              ? 'bg-[#f26522]/20 text-[#f26522]' 
              : 'text-white hover:bg-white/10'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
