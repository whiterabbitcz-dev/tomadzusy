---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import productsData from '../data/products.json';

export async function getStaticPaths() {
  const paths = [];

  // Generate paths for categories
  productsData.categories.forEach((category) => {
    paths.push({
      params: { slug: category.slug },
      props: { type: 'category', data: category }
    });

    // Generate paths for products in this category
    category.products.forEach((product) => {
      paths.push({
        params: { slug: product.slug },
        props: { type: 'product', data: product, category }
      });
    });
  });

  return paths;
}

const { type, data, category } = Astro.props;
---

{type === 'category' ? (
  <!-- Category Page -->
  <Layout 
    title={`${data.title} ${data.subtitle} - Toma Džusy`}
    description={data.description}
  >
    <Navigation />
    
    <main class="pt-20">
      <!-- Hero Section -->
      <section class="py-16 bg-gradient-to-br from-orange-50 to-yellow-50">
        <div class="container-custom text-center">
          <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-4">
            {data.title}
          </h1>
          <p class="text-2xl lg:text-3xl text-gray-700 mb-6">
            {data.subtitle}
          </p>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {data.description}
          </p>
        </div>
      </section>

      <!-- Products Grid -->
      <section class="py-16">
        <div class="container-custom">
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            {data.products.map((product) => (
              <a
                href={`/${product.slug}`}
                class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 overflow-hidden"
              >
                <div class="aspect-square relative overflow-hidden bg-gradient-to-br from-orange-50 to-yellow-50">
                  <img
                    src={product.image}
                    alt={product.name}
                    class="w-full h-full object-contain p-8 transition-transform duration-300 group-hover:scale-110"
                  />
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-toma-orange transition-colors">
                    {product.name}
                  </h3>
                  <p class="text-sm text-gray-600 mb-2">{product.size}</p>
                  <p class="text-sm text-gray-700">{product.description}</p>
                </div>
              </a>
            ))}
          </div>

          <!-- Back Button -->
          <div class="mt-12 text-center">
            <a
              href="/nase-vyrobky"
              class="inline-flex items-center gap-2 px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-900 font-semibold rounded-full transition-all"
            >
              <svg class="w-5 h-5 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Zpět na kategorie</span>
            </a>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </Layout>
) : (
  <!-- Product Detail Page -->
  <Layout 
    title={`${data.name} ${data.size} - Toma Džusy`}
    description={data.description}
  >
    <Navigation />
    
    <main class="pt-20">
      <!-- Product Detail Section -->
      <section class="py-16">
        <div class="container-custom">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Product Image -->
            <div class="aspect-square relative bg-gradient-to-br from-orange-50 to-yellow-50 rounded-3xl p-12">
              <img
                src={data.image}
                alt={data.name}
                class="w-full h-full object-contain"
              />
            </div>

            <!-- Product Info -->
            <div class="space-y-8">
              <div>
                <p class="text-sm font-semibold text-toma-orange uppercase tracking-wider mb-2">
                  {category.title} {category.subtitle}
                </p>
                <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-4">
                  {data.name}
                </h1>
                <p class="text-2xl text-gray-600 mb-6">
                  {data.size}
                </p>
                <p class="text-lg text-gray-700 leading-relaxed">
                  {data.description}
                </p>
              </div>

              <div class="flex flex-wrap gap-4">
                <a
                  href={`/${category.slug}`}
                  class="inline-flex items-center gap-2 px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-900 font-semibold rounded-full transition-all"
                >
                  <svg class="w-5 h-5 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                  <span>Zpět na kategorii</span>
                </a>

                <a
                  href="/nase-vyrobky"
                  class="inline-flex items-center gap-2 px-6 py-3 bg-toma-orange hover:bg-orange-600 text-white font-semibold rounded-full transition-all hover:scale-105"
                >
                  <span>Všechny výrobky</span>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Related Products -->
      <section class="py-16 bg-gray-50">
        <div class="container-custom">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">
            Další příchutě z kategorie {category.subtitle}
          </h2>
          
          <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {category.products.filter(p => p.slug !== data.slug).slice(0, 4).map((product) => (
              <a
                href={`/${product.slug}`}
                class="group bg-white rounded-xl shadow hover:shadow-lg transition-all duration-300 hover:-translate-y-1 overflow-hidden"
              >
                <div class="aspect-square relative overflow-hidden bg-gradient-to-br from-orange-50 to-yellow-50">
                  <img
                    src={product.image}
                    alt={product.name}
                    class="w-full h-full object-contain p-6 transition-transform duration-300 group-hover:scale-110"
                  />
                </div>
                <div class="p-4">
                  <h3 class="font-bold text-gray-900 group-hover:text-toma-orange transition-colors">
                    {product.name}
                  </h3>
                  <p class="text-sm text-gray-600">{product.size}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </Layout>
)}

