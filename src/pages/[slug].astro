---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import productsData from '../data/products.json';

export async function getStaticPaths() {
  const paths = [];

  productsData.categories.forEach((category) => {
    paths.push({
      params: { slug: category.slug },
      props: { type: 'category', data: category }
    });

    category.products.forEach((product) => {
      paths.push({
        params: { slug: product.slug },
        props: { type: 'product', data: product, category }
      });
    });
  });

  return paths;
}

const { type, data, category } = Astro.props;
---

{type === 'category' ? (
  <!-- Category Page -->
  <Layout 
    title={`${data.title} ${data.subtitle} - Toma Džusy`}
    description={data.description}
  >
    <div class="min-h-screen flex flex-col">
      <Navigation />
      
      <div class="flex-1 py-8">
        <div class="container-custom">
          <!-- Header -->
          <div class="text-center mb-10">
            <h1 class="text-4xl lg:text-6xl font-bold text-white mb-2">
              {data.title}
            </h1>
            <p class="text-2xl lg:text-3xl text-white/80 mb-4">
              {data.subtitle}
            </p>
            <p class="text-white/70 max-w-xl mx-auto">
              {data.description}
            </p>
          </div>

          <!-- Products Grid -->
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {data.products.map((product) => (
              <a
                href={`/${product.slug}`}
                class="group bg-white/10 backdrop-blur-sm rounded-2xl hover:bg-white/20 transition-all duration-300 hover:-translate-y-2 overflow-hidden"
              >
                <div class="aspect-square relative overflow-hidden">
                  <img
                    src={product.image}
                    alt={product.name}
                    class="w-full h-full object-contain p-6 transition-transform duration-300 group-hover:scale-110"
                  />
                </div>
                <div class="p-5 border-t border-white/10">
                  <h3 class="text-lg font-bold text-white mb-1 group-hover:text-toma-orange transition-colors">
                    {product.name}
                  </h3>
                  <p class="text-sm text-white/60 mb-1">{product.size}</p>
                  <p class="text-sm text-white/70">{product.description}</p>
                </div>
              </a>
            ))}
          </div>

          <!-- Back Button -->
          <div class="mt-10 text-center">
            <a
              href="/nase-vyrobky"
              class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-full transition-all backdrop-blur-sm"
            >
              <svg class="w-5 h-5 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Zpět na kategorie</span>
            </a>
          </div>
        </div>
      </div>

      <Footer />
    </div>
  </Layout>
) : (
  <!-- Product Detail Page -->
  <Layout 
    title={`${data.name} ${data.size} - Toma Džusy`}
    description={data.description}
  >
    <div class="min-h-screen flex flex-col">
      <Navigation />
      
      <div class="flex-1 py-8">
        <div class="container-custom">
          <div class="grid lg:grid-cols-2 gap-10 items-center">
            <!-- Product Image -->
            <div class="aspect-square relative bg-white/10 backdrop-blur-sm rounded-3xl p-10">
              <img
                src={data.image}
                alt={data.name}
                class="w-full h-full object-contain drop-shadow-2xl"
              />
            </div>

            <!-- Product Info -->
            <div class="space-y-6">
              <div>
                <p class="text-sm font-semibold text-toma-orange uppercase tracking-wider mb-2">
                  {category.title} {category.subtitle}
                </p>
                <h1 class="text-4xl lg:text-5xl font-bold text-white mb-3">
                  {data.name}
                </h1>
                <p class="text-xl text-white/70 mb-4">
                  {data.size}
                </p>
                <p class="text-white/80 leading-relaxed">
                  {data.description}
                </p>
              </div>

              <div class="flex flex-wrap gap-4">
                <a
                  href={`/${category.slug}`}
                  class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-full transition-all backdrop-blur-sm"
                >
                  <svg class="w-5 h-5 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                  <span>Zpět na kategorii</span>
                </a>

                <a
                  href="/nase-vyrobky"
                  class="inline-flex items-center gap-2 px-6 py-3 bg-toma-orange hover:bg-orange-500 text-white font-semibold rounded-full transition-all hover:scale-105"
                >
                  <span>Všechny výrobky</span>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Related Products -->
          <div class="mt-16">
            <h2 class="text-2xl font-bold text-white mb-6">
              Další příchutě z kategorie {category.subtitle}
            </h2>
            
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">
              {category.products.filter(p => p.slug !== data.slug).slice(0, 6).map((product) => (
                <a
                  href={`/${product.slug}`}
                  class="group bg-white/10 backdrop-blur-sm rounded-xl hover:bg-white/20 transition-all duration-300 hover:-translate-y-1 overflow-hidden"
                >
                  <div class="aspect-square relative overflow-hidden">
                    <img
                      src={product.image}
                      alt={product.name}
                      class="w-full h-full object-contain p-4 transition-transform duration-300 group-hover:scale-110"
                    />
                  </div>
                  <div class="p-3 border-t border-white/10">
                    <h3 class="font-semibold text-white text-sm group-hover:text-toma-orange transition-colors truncate">
                      {product.name}
                    </h3>
                    <p class="text-xs text-white/60">{product.size}</p>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>

      <Footer />
    </div>
  </Layout>
)}
