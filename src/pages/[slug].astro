---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import productsData from '../data/products.json';

export async function getStaticPaths() {
  const paths = [];

  productsData.categories.forEach((category) => {
    paths.push({
      params: { slug: category.slug },
      props: { type: 'category', data: category }
    });

    category.products.forEach((product) => {
      paths.push({
        params: { slug: product.slug },
        props: { type: 'product', data: product, category }
      });
    });
  });

  return paths;
}

const { type, data, category } = Astro.props;
---

{type === 'category' ? (
  <Layout 
    title={`${data.title} ${data.subtitle} - Toma Džusy`}
    description={data.description}
  >
    <div class="min-h-screen flex flex-col">
      <Navigation />
      
      <div class="flex-1 py-8">
        <!-- Header -->
        <div class="text-center mb-8">
          <h1 class="text-3xl lg:text-5xl font-bold text-white mb-2">
            {data.title}
          </h1>
          <p class="text-xl lg:text-2xl text-white/80 mb-3">
            {data.subtitle}
          </p>
          <p class="text-white/70 text-sm max-w-lg mx-auto">
            {data.description}
          </p>
        </div>

        <!-- Products Grid -->
        <div class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
          {data.products.map((product) => (
            <a
              href={`/${product.slug}`}
              class="group bg-white/10 backdrop-blur-sm rounded-xl hover:bg-white/20 transition-all duration-300 hover:-translate-y-1 overflow-hidden"
            >
              <div class="aspect-square relative overflow-hidden">
                <img
                  src={product.image}
                  alt={product.name}
                  class="w-full h-full object-contain p-4 transition-transform duration-300 group-hover:scale-110"
                />
              </div>
              <div class="p-3 border-t border-white/10">
                <h3 class="text-sm font-bold text-white mb-1 group-hover:text-toma-orange transition-colors">
                  {product.name}
                </h3>
                <p class="text-xs text-white/60">{product.size}</p>
              </div>
            </a>
          ))}
        </div>

        <!-- Back Button -->
        <div class="mt-8 text-center">
          <a
            href="/nase-vyrobky"
            class="inline-flex items-center gap-2 px-5 py-2 bg-white/10 hover:bg-white/20 text-white font-medium rounded-full transition-all text-sm"
          >
            <svg class="w-4 h-4 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span>Zpět</span>
          </a>
        </div>
      </div>

      <Footer />
    </div>
  </Layout>
) : (
  <Layout 
    title={`${data.name} ${data.size} - Toma Džusy`}
    description={data.description}
  >
    <div class="min-h-screen flex flex-col">
      <Navigation />
      
      <div class="flex-1 py-8">
        <div class="grid lg:grid-cols-2 gap-8 items-center">
          <!-- Product Image -->
          <div class="aspect-square relative bg-white/10 backdrop-blur-sm rounded-2xl p-8">
            <img
              src={data.image}
              alt={data.name}
              class="w-full h-full object-contain drop-shadow-xl"
            />
          </div>

          <!-- Product Info -->
          <div class="space-y-5">
            <div>
              <p class="text-xs font-semibold text-toma-orange uppercase tracking-wider mb-1">
                {category.title} {category.subtitle}
              </p>
              <h1 class="text-3xl lg:text-4xl font-bold text-white mb-2">
                {data.name}
              </h1>
              <p class="text-lg text-white/70 mb-3">
                {data.size}
              </p>
              <p class="text-white/80 text-sm leading-relaxed">
                {data.description}
              </p>
            </div>

            <div class="flex flex-wrap gap-3">
              <a
                href={`/${category.slug}`}
                class="inline-flex items-center gap-2 px-5 py-2 bg-white/10 hover:bg-white/20 text-white font-medium rounded-full transition-all text-sm"
              >
                <svg class="w-4 h-4 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <span>Kategorie</span>
              </a>

              <a
                href="/nase-vyrobky"
                class="inline-flex items-center gap-2 px-5 py-2 bg-toma-orange hover:bg-orange-500 text-white font-medium rounded-full transition-all text-sm"
              >
                <span>Výrobky</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Related Products -->
        <div class="mt-12">
          <h2 class="text-xl font-bold text-white mb-4">
            Další příchutě
          </h2>
          
          <div class="grid grid-cols-3 sm:grid-cols-4 lg:grid-cols-6 gap-3">
            {category.products.filter(p => p.slug !== data.slug).slice(0, 6).map((product) => (
              <a
                href={`/${product.slug}`}
                class="group bg-white/10 rounded-lg hover:bg-white/20 transition-all duration-300 overflow-hidden"
              >
                <div class="aspect-square relative overflow-hidden">
                  <img
                    src={product.image}
                    alt={product.name}
                    class="w-full h-full object-contain p-2 transition-transform duration-300 group-hover:scale-110"
                  />
                </div>
                <div class="p-2 border-t border-white/10">
                  <h3 class="font-medium text-white text-xs group-hover:text-toma-orange transition-colors truncate">
                    {product.name}
                  </h3>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>

      <Footer />
    </div>
  </Layout>
)}
