---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import HeroSlider from '../components/HeroSlider';
import homeData from '../data/home.json';
---

<Layout title="Toma Džusy - Původní česká značka">
  <div class="min-h-screen flex flex-col">
    <Navigation />
    
    <!-- Main Content Area -->
    <div class="flex-1 flex items-center py-8">
      <div class="w-full">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          
          <!-- Left Side - Image Slider -->
          <div class="order-2 lg:order-1">
            <div class="relative max-w-md mx-auto lg:mx-0">
              <HeroSlider slides={homeData.hero.slides} client:load />
            </div>
          </div>

          <!-- Right Side - Content -->
          <div class="order-1 lg:order-2 space-y-6 text-center lg:text-left">
            <!-- Title -->
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight">
              <span class="whitespace-pre-line">{homeData.hero.title}</span>
            </h1>

            <!-- CTA Button -->
            <div>
              <a
                href={homeData.hero.buttonLink}
                class="inline-flex items-center gap-3 px-8 py-4 bg-toma-orange text-white font-bold rounded-full hover:bg-orange-500 transition-all hover:scale-105 shadow-lg text-lg uppercase tracking-wide"
              >
                <span>{homeData.hero.buttonText}</span>
              </a>
            </div>

            <!-- About Text -->
            <div class="space-y-4 text-sm lg:text-base leading-relaxed">
              {homeData.about.paragraphs.map((paragraph) => (
                <p class="text-white/90">{paragraph}</p>
              ))}
            </div>
          </div>

        </div>
      </div>
    </div>

    <Footer />
  </div>
</Layout>
