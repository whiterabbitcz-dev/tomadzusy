---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import HeroSlider from '../components/HeroSlider';
import homeData from '../data/home.json';
---

<Layout title="Toma Džusy - Původní česká značka">
  <div class="min-h-full flex flex-col">
    <!-- Navigation -->
    <Navigation />
    
    <!-- Main Content -->
    <div class="flex-1 flex items-center py-6 md:py-8">
      <div class="w-full">
        <div class="grid lg:grid-cols-2 gap-6 lg:gap-10 items-center">
          
          <!-- Left Side - Image Slider -->
          <div class="order-2 lg:order-1">
            <div class="relative max-w-sm mx-auto lg:mx-0">
              <HeroSlider slides={homeData.hero.slides} client:load />
            </div>
          </div>

          <!-- Right Side - Content -->
          <div class="order-1 lg:order-2 space-y-5 text-center lg:text-left">
            <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-white leading-tight whitespace-pre-line">
              {homeData.hero.title}
            </h1>

            <div>
              <a href={homeData.hero.buttonLink} class="btn-toma text-base">
                {homeData.hero.buttonText}
              </a>
            </div>

            <div class="space-y-4 text-sm leading-relaxed">
              {homeData.about.paragraphs.map((paragraph) => (
                <p class="text-white/90">{paragraph}</p>
              ))}
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- Footer -->
    <Footer />
  </div>
</Layout>
