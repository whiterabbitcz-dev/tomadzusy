---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Kontakt - Toma Džusy"
  description="Kontaktujte nás a sdělte nám své příběhy s našimi výrobky."
>
  <div class="min-h-screen flex flex-col">
    <Navigation />
    
    <!-- Main Content -->
    <div class="flex-1 py-8">
      <div class="grid lg:grid-cols-2 gap-10 items-start">
        
        <!-- Left Side - Form -->
        <div>
          <div class="mb-6">
            <h1 class="text-3xl lg:text-4xl font-bold text-white mb-3">
              Kontaktujte nás
            </h1>
            <p class="text-white/80 text-sm leading-relaxed">
              Toma je pro nás víc než jen džus. Je to radost, kterou chceme sdílet s vámi.
            </p>
          </div>

          <form 
            name="kontakt"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="space-y-4"
          >
            <input type="hidden" name="form-name" value="kontakt" />
            <p class="hidden">
              <label>Don't fill: <input name="bot-field" /></label>
            </p>

            <div class="grid sm:grid-cols-2 gap-3">
              <input
                type="text"
                name="jmeno"
                required
                class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:ring-2 focus:ring-toma-orange focus:border-transparent transition-all text-sm"
                placeholder="Jméno"
              />
              <input
                type="text"
                name="prijmeni"
                required
                class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:ring-2 focus:ring-toma-orange focus:border-transparent transition-all text-sm"
                placeholder="Příjmení"
              />
            </div>

            <input
              type="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:ring-2 focus:ring-toma-orange focus:border-transparent transition-all text-sm"
              placeholder="Email"
            />

            <textarea
              name="zprava"
              required
              rows="4"
              class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:ring-2 focus:ring-toma-orange focus:border-transparent transition-all resize-none text-sm"
              placeholder="Vaše zpráva"
            ></textarea>

            <button
              type="submit"
              class="w-full px-6 py-3 bg-toma-orange text-white font-bold rounded-lg hover:bg-orange-500 transition-all hover:scale-[1.02] shadow-lg uppercase tracking-wide text-sm"
            >
              Odeslat zprávu
            </button>
          </form>
        </div>

        <!-- Right Side - Image Gallery -->
        <div class="grid grid-cols-2 gap-3">
          {[1, 2, 3, 4].map((num) => (
            <div class="aspect-square overflow-hidden rounded-xl bg-white/10">
              <img
                src={`/images/kontakt-${num}.png`}
                alt={`Toma džusy ${num}`}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
          ))}
        </div>

      </div>
    </div>

    <Footer />
  </div>
</Layout>
