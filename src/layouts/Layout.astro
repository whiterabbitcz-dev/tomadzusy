---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Toma Džusy - Původní česká značka',
  description = 'Vítejte u značky Toma, původní české značky s dlouholetou tradicí v oblasti výroby džusů.'
} = Astro.props;
---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Netlify Identity Widget -->
    <script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body class="h-screen w-screen overflow-hidden relative">
    
    <!-- Background: Radial Green Gradient -->
    <div 
      class="fixed inset-0 z-0"
      style="background: radial-gradient(ellipse 70% 70% at 50% 50%, #5cb947 0%, #4aa838 20%, #3d9430 40%, #2d7a24 60%, #1e6118 80%, #154d12 100%);"
    ></div>
    
    <!-- Left Fruit Column -->
    <img 
      src="/images/toma_back_left.png" 
      alt="" 
      class="fixed left-0 top-0 h-full w-auto z-10 object-cover hidden lg:block"
      aria-hidden="true"
    />
    
    <!-- Right Fruit Column -->
    <img 
      src="/images/toma_back_right.png" 
      alt="" 
      class="fixed right-0 top-0 h-full w-auto z-10 object-cover hidden lg:block"
      aria-hidden="true"
    />
    
    <!-- Main Scrollable Content Area -->
    <main class="relative z-20 h-full overflow-y-auto scrollbar-hide">
      <div class="min-h-full flex flex-col">
        <div class="max-w-4xl mx-auto w-full px-4 md:px-8 flex-1 flex flex-col">
          <slot />
        </div>
      </div>
    </main>
    
    <!-- Netlify Identity Widget Script -->
    <script is:inline>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </body>
</html>
